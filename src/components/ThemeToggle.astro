<button
  id="theme-toggle-btn"
  class="text-gray-400 hover:text-white transition-colors
         w-6 h-6 flex items-center justify-center 
         relative rounded-full bg-slate-800 overflow-hidden"
>
  <svg
    id="theme-icon-sun"
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="icon icon-tabler icon-tabler-sun 
           transition-all duration-300 transform 
           dark:-rotate-90 dark:scale-0 dark:opacity-0"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
    <path
      d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7"
    ></path>
  </svg>

  <svg
    id="theme-icon-moon"
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="icon icon-tabler icon-tabler-moon 
           absolute transition-all duration-300 transform 
           opacity-0 scale-0 rotate-90 
           dark:opacity-100 dark:scale-100 dark:rotate-0"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path
      d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"
    ></path>
  </svg>
</button>

<script>
  // Constantes
  const themeToggleBtn = document.getElementById("theme-toggle-btn");
  // Ya no necesitamos 'sunIcon' ni 'moonIcon'
  const userTheme = localStorage.getItem("theme");
  const systemTheme = window.matchMedia("(prefers-color-scheme: dark)").matches;
  const htmlElement = document.documentElement;

  // Función para aplicar el tema y mostrar/ocultar iconos
  const applyTheme = (isDark: boolean) => {
    htmlElement.classList.toggle("dark", isDark);
    
    // CAMBIO EN SCRIPT:
    // Eliminamos estas líneas. El CSS (Tailwind)
    // se encarga de la animación usando la clase 'dark' en <html>.
    // sunIcon?.classList.toggle("hidden", isDark);
    // moonIcon?.classList.toggle("hidden", !isDark);
  };

  // Función para manejar el clic en el botón
  const handleToggleClick = () => {
    const isDark = htmlElement.classList.contains("dark");
    const newTheme = isDark ? "light" : "dark";
    localStorage.setItem("theme", newTheme);
    applyTheme(!isDark);
  };

  // 1. Cargar el tema al inicio
  // Prioridad: localStorage > Preferencia del Sistema (OS)
  if (userTheme === "dark" || (!userTheme && systemTheme)) {
    applyTheme(true);
  } else {
    applyTheme(false);
  }

  // 2. Añadir el listener al botón
  themeToggleBtn?.addEventListener("click", handleToggleClick);
</script>